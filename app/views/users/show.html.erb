<h3 class="text-center"><%= @user.email %></h3>
<br />
<%= render'shared/feed_subscribe' %>

<% if @podcasts.any? %>
  <h2 class="text-center">Subscriptions</h2>
  <div class="row">
    <% @podcasts.each do |podcast| %>
      <%= render podcast %>
    <% end %>
  </div>
<% else %>
  <h4 class="text-center">
    Looks like you haven't subscribed to any podcasts yet, just paste an rss
    link above or <%= link_to 'browse the podcast library', podcasts_path %>
    to add some to your list.
  </h4>
<% end %>