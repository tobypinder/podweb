<h3 class="text-center"><%= @user.email %></h3>
<br />
<%= render'podcasts/feed_subscribe' %>

<% if @user.podcasts.any? %>
  <h2 class="text-center">Subscriptions</h2>
  <% @user.podcasts.each do |podcast| %>
    <p class="text-center">
      <%= podcast.feed_url %>
      <%= link_to podcast, method: :delete, data: { confirm: "Unsubscribe?" }, title: podcast.name do %>
        <button type="button" class="close" aria-hidden="true">&times;</button>
      <% end %>
    </p>
  <% end %>
<% end %>