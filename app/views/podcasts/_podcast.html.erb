<% feed = get_feed(podcast) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if user_signed_in? %>
      <span class ="pull-right">
        <% if current_user.podcasts.include?(podcast) %>
          <%= link_to podcast, method: :delete, data: { confirm: "Unsubscribe?" } do %>
            <button type="button" class="btn btn-danger">Unsubscribe</button>
          <% end %>
        <% else %>
          <%= link_to podcasts_path(podcast: { feed_url: podcast.feed_url }), method: :post do %>
            <button type="button" class="btn btn-success">Subscribe</button>
          <% end %>
        <% end %>
      </span>
    <% end %>
    <h4><%= link_to feed.title, podcast %></h4>
    <p class="text-muted"><strong>Latest Episode</strong>&nbsp;<%= feed.entries.first.title %></p>
  </div>
</div>