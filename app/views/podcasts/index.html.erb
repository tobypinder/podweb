<h3 class="text-center">Podcast Library</h3>
<br />
<% if user_signed_in? %>
  <%= render 'shared/feed_subscribe' %>
  <br />
<% end %>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <h4 class="text-center">
      <%=
      case @sort_by
        when 'pop' then 'List of Popular Podcasts'
        when 'a-z' then 'Alphabetical List of Podcasts'
      end
      %>
    </h4>
  </div>
  <div class="col-xs-3">
    <span class="pull-right sort-options">
      Sort:
      <%= link_to podcasts_path(sort: 'a-z') do %>
        <span class="label label-<%= @sort_by == 'a-z' ? 'primary' : 'default' %>">A-Z</span>
      <% end %>
      <%= link_to podcasts_path(sort: 'pop') do %>
        <span class="label label-<%= @sort_by == 'pop' ? 'primary' : 'default' %>">Popular</span>
      <% end %>
    </span>
  </div>
</div>
<hr class="thin-hr" />
<div class="row">
  <%= render @podcasts %>
</div>
<div class="pagination-holder"><%= will_paginate @podcasts %></div>