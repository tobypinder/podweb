<%# navigation styled for Bootstrap 3.0 %>
<header>
  <nav class="navbar navbar-inverse navbar-static-top " role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Podweb', root_path, class: 'navbar-brand' %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Podcast Library', podcasts_path %></li>
          <% if user_signed_in? %>
            <li><%= link_to current_user.email, current_user %></li>
            <li><%= link_to 'Logout', signout_path %></li>
          <% else %>
            <li><%= link_to "", signin_path, class: "gplus-signin" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>